<div class="min-h-screen w-[95%] mx-auto">
  <h1 class="text-3xl font-bold mt-10 text-center">Welcome, <%= current_user.fullname %></h1>
  <div class="grid grid-cols-2 gap-4 mt-4 md:grid-cols-3 lg:grid-cols-4">
    <% panels.each do |panel| %>
      <div class="col-span-1">
        <a href="<%= panel[:path] %>" class="block p-4 bg-gray-800 rounded-lg shadow-lg hover:bg-gray-600">
          <i class="fas fa-user fa-2x text-center"></i>
          <p class="text-center"><%= panel[:title] %></p>
        </a>
      </div>
    <% end %>
  </div>
</div>
