<div class="min-h-screen w-[95%] mx-auto">
  <h1 class="text-3xl font-bold mt-10 text-center text-text-dark dark:text-text">Welcome, <%= current_user.fullname %></h1>
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 items-center gap-6">
      <% admin_panels.each do |panel| %>
        <!-- Card -->
        <a class="hover:text-accent group flex gap-y-6 w-full h-full hover:bg-gray-100 rounded-lg p-5 transition-all dark:hover:bg-white/[.075] dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="<%= panel[:path] %>">
          <%= panel[:icon] %>
          <div>
            <div>
              <h3 class="block font-bold text-gray-800 dark:text-white"><%= panel[:title] %></h3>
              <p class="text-gray-600 dark:text-gray-400"><%= panel[:description] %></p>
            </div>

            <p class="mt-3 inline-flex items-center gap-x-1 text-sm font-semibold text-gray-800 dark:text-gray-200">
              Check out for more
              <svg class="flex-shrink-0 w-4 h-4 transition ease-in-out group-hover:translate-x-1" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
            </p>
          </div>
        </a>
        <!-- End Card -->
      <% end %>
    </div>
  </div>
</div>
