<section class="w-[95%] m-auto flex justify-center items-center h-[90vh]">
  <div class="w-full flex justify-center items-center flex-col">
    <h2 class="text-[25px] font-[500] font-Poppins text-center py-2 mb-2">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, "Enter your Email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "awesome@email.com", class: "w-full bg-transparent border rounded h-[40px] px-2 outline-none mt-[10px] font-Poppins" %>
      </div>

      <div class="mt-5">
        <%= f.submit "Send me reset password instructions", class: "py-3 px-6 rounded-full cursor-pointer bg-[#2190ff] min-h-[45px] w-full text-[16px] font-Poppins font-semibold" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>