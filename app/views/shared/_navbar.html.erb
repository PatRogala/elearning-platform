<% nav_items = [
  {
    name: "Home",
    path: root_path
  },
  {
    name: "FAQ",
    path: faq_path
  }
]
%>

<ul class="flex flex-col mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0">
  <% nav_items.each do |item| %>
    <li>
      <a href="<%= item[:path] %>" class="block py-2 pr-4 pl-3 border-b lg:border-0 lg:hover:text-primary-700 lg:p-0 text-gray-400 hover:bg-gray-700 hover:text-white lg:hover:bg-transparent border-gray-700"><%= item[:name] %></a>
    </li>
  <% end %>
</ul>