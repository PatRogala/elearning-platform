<% nav_items = [
  {
    name: "Home",
    path: root_path
  },
  {
    name: "FAQ",
    path: faq_path
  }
]
%>

<% if current_user&.admin? %>
  <li>
    <%= link_to "Admin", admin_path, class: "px-1 block py-2 pr-4 pl-3 lg:p-0 text-text border-gray-700 hover:opacity-75 transition-all text-[20px]" %>
  </li
<% end %>

<% nav_items.each do |item| %>
  <li>
    <a href="<%= item[:path] %>" class="px-1 block py-2 pr-4 pl-3 lg:p-0 text-text border-gray-700 hover:opacity-75 transition-all text-[20px]"><%= item[:name] %></a>
  </li>
<% end %>
