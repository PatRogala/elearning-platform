<% nav_items = [
  {
    name: t("links.courses"),
    path: courses_path
  },
  {
    name: t("links.questions"),
    path: faq_path
  },
  {
    name: t("links.privacy_policy"),
    path: cookie_policy_path
  }
]
%>

<% if current_user&.admin? %>
  <%= link_to "Admin", admin_path, class: "font-medium text-gray-500 hover:text-gray-400 sm:py-6 dark:text-gray-400 dark:hover:text-gray-500" %>
<% end %>

<% nav_items.each do |item| %>
  <a href="<%= item[:path] %>" class="font-medium text-gray-500 hover:text-gray-400 sm:py-6 dark:text-gray-400 dark:hover:text-gray-500"><%= item[:name] %></a>
<% end %>

<% if user_signed_in? %>
  <%= link_to t("links.profile"), profile_path, class: "font-medium text-gray-500 hover:text-gray-400 sm:py-6 dark:text-gray-400 dark:hover:text-gray-500 md:hidden" %>
  <%= button_to t("links.logout"), destroy_user_session_path, method: :delete, class: "font-medium text-gray-500 hover:text-gray-400 sm:py-6 dark:text-gray-400 dark:hover:text-gray-500 md:hidden" %>
<% end %>
