  <!-- Grid -->
  <div class="grid grid-cols-1 md:grid-cols-3 items-center gap-5 text-center">
    <div>
      <%= link_to root_path, class: "flex-none text-xl font-semibold text-text-dark dark:text-text dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600", "aria-label": "Brand" do %>
        FancyDev
      <% end %>
    </div>
    <!-- End Col -->

    <ul class="text-center">
      <li class="inline-block relative pe-8 last:pe-0 last-of-type:before:hidden before:absolute before:top-1/2 before:end-3 before:-translate-y-1/2 before:content-['/'] before:text-text-dark dark:before:text-text">
        <%= link_to "FAQ", faq_path, class: "inline-flex gap-x-2 text-sm text-text-dark hover:opacity-80 dark:text-text dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" %>
