    </div>
    <!-- End Social Brands -->
  </div>
  <!-- End Grid -->
</footer>


<footer class="footer p-10 text-text">
  <nav>
    <header class="footer-title">Services</header>
    <%= link_to "FAQ", faq_path, class: "text-[16px] hover:opacity-80" %>
  </nav>
  <nav>
    <header class="footer-title">Creator</header>
    <a target="_blank" class="text-[16px] hover:opacity-80" href="<%= ENV['BLOG_URL'] %>">Blog</a>
  </nav>
  <nav>
    <header class="footer-title">Social</header>
    <div class="grid grid-flow-col gap-4 text-[16px]">
      <a target="_blank" href="<%= ENV['GITHUB_URL'] %>" class="hover:opacity-80">Github</a>
      <a target="_blank" href="<%= ENV['LINKEDIN_URL'] %>" class="hover:opacity-80">Linkedin</a>
      <a target="_blank" href="<%= ENV['YOUTUBE_URL'] %>" class="hover:opacity-80">Youtube</a>
