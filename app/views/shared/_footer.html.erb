        <%= link_to "Blog", ENV['BLOG_URL'], class: "inline-flex gap-x-2 text-sm text-text-dark hover:opacity-80 dark:text-text dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600", target: "_blank" %>
      </li>
    </ul>
    <!-- End Col -->

    <!-- Social Brands -->
    <div class="md:text-end space-x-2">
      <a class="w-8 h-8 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-full border border-transparent text-text-dark hover:bg-background hover:text-text disabled:opacity-50 disabled:pointer-events-none dark:text-text dark:hover:bg-background-dark dark:hover:text-background dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="#">
