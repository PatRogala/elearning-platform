<turbo-frame id="main">
  <!-- Hero -->
  <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Grid -->
    <div class="grid md:grid-cols-2 gap-4 md:gap-8 xl:gap-20 md:items-center">
      <div>
        <h1 class="block text-3xl font-bold text-text-dark sm:text-4xl lg:text-6xl lg:leading-tight dark:text-text">Start your journey with <span class="text-primary-dark dark:text-primary">FancyDev</span></h1>
        <p class="mt-3 text-lg text-text-dark dark:text-text">Harness the Power of Code: Build Awesome Projects, Master Programming Languages, and Transform Your Future</p>

        <!-- Buttons -->
        <div class="mt-7 grid gap-3 w-full sm:inline-flex">
          <a class="py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-primary-dark dark:bg-primary dark:text-background text-background-dark hover:opacity-80 disabled:opacity-50 disabled:pointer-events-none dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600" href="#">
            Check our courses
            <svg class="flex-shrink-0 w-4 h-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m9 18 6-6-6-6"/></svg>
          </a>
          <%= link_to "Have a question?", faq_path, class: "py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-medium rounded-lg text-gray-800 shadow-sm disabled:opacity-50 disabled:pointer-events-none dark:text-white hover:underline dark:focus:outline-none dark:focus:ring-1 dark:focus:ring-gray-600", data: { turbo_frame: "_top" } %>
        </div>
        <!-- End Buttons -->

      </div>
      <!-- End Col -->

      <div class="relative ms-4 mt-10" data-controller="hero-code-editor">
        <div id="code-hero" class="w-full relative h-[500px]" data-hero-code-editor-target="editorDiv">
        </div>

        <div class="absolute inset-0 -z-[1] w-full h-full rounded-md mt-4 -mb-4 me-4 -ms-4 lg:mt-6 lg:-mb-6 lg:me-6 lg:-ms-6"></div>
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Hero -->
</turbo-frame>
